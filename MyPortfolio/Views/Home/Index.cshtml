<div id="content">
    <header class="menu">
        <div id="category-list" data-bind="foreach: categories">
            <div class="category highlitable clickable" data-bind="click: active, style: $root.getCategoryWidth(), css:{ selected : isSelected}">
                <span data-bind="text: name"></span>
            </div>
        </div>
    </header>      
    <div id="left-pane" class="menu">
        <div id="my-photo">
        </div>

        <div id="subcategory-list" data-bind="foreach: category().subcategories">
            <div class="subcategory highlitable clickable" data-bind="click: toggleSelected, css: {selected: isSelected}">
                <span data-bind="text: name"></span>
            </div>
        </div>
    </div>

    <article data-bind="with: category">
        @Html.Partial("../Portfolio/Portfolio")
        @Html.Partial("../Experience/Experience")
        @Html.Partial("../AboutMe/AboutMe")
    </article>
</div>
